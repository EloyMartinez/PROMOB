<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnBall"
            android:layout_width="wrap_content"
            android:text="@string/invaders"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnPendu"
            android:layout_width="wrap_content"
            android:text="@string/pendu"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnPingPong"
            android:layout_width="wrap_content"
            android:text="@string/ping_pong"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnQuizz"
            android:layout_width="wrap_content"
            android:text="@string/quizz"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnTicTacToe"
            android:layout_width="wrap_content"
            android:text="@string/tic_tac_toe"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</RelativeLayout>